<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>Get All Books</title>
</head>
<body>
    <main>
        <h2>All books from the library</h2>
        <table>
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Amount of books in stock</th>
                    <th>Pages</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach( book => { %>
                    <tr>
                        <td><%=  book.bookID %></td>
                        <td><%=  book.name %></td>
                        <td><%=  book.author %></td>
                        <td><%=  book.numberOfBooks %></td>
                        <td><%=  book.pages %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/"><button>To main menu</button></a>
    </main>
</body>
